<section>
  <div class="container">
    <div class="row">
      <div class="col-xs-2 col-sm-2 col-md-3 col-lg-4"></div>
        <div class="col-xs-4 col-sm-4 col-md-3 col-lg-2">
          <form class="" action="/weather" method="post">
            <input type="text" class="btn btn-default"placeholder="Enter city or zip code" name="zips" value="">
        </div>
        <div class="col-xs-4 col-sm-4 col-md-3 col-lg-2">
            <input class="btn btn-success form-control" type="submit" value="SUBMIT">
          </form>
        </div>
      <div class="col-xs-2 col-sm-2 col-md-3 col-lg-4"></div>
    </div>
  </div>
</section>

<% @forecasts.each do |forecast| %>
  <h3><%= forecast[:curDate] %><h3>
  <h3><%= forecast[:timeZone] %></h3>
  <h3><%= forecast[:curSum] %></h3>
  <h3><%= forecast[:curTemp] %></h3>
  <h3><%= forecast[:curPrecip] %></h3>
  <h3><%= forecast[:maxTomorTemp] %></h3>
  <h3><%= forecast[:minTomorTemp] %></h3>
  <form class="" action="/" method="post">
    <input visibility="hidden" type="hidden" name="weather_id" value="<%= weather.id %>">
    <button class="btn btn-primary" type="submit" name="weather_id">DELETE!!!</button>
  </form>
<% end %>
